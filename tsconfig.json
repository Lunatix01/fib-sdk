{
  "extends": "@tsconfig/recommended/tsconfig.json",
  "include": ["src", "types"],
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es6",
    "module": "ES2015",
    "moduleResolution": "node",
    "declaration": true,
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "checkJs": true,
    "allowSyntheticDefaultImports": true,
    "strictNullChecks": false
  }
}
